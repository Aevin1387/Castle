#RSpec
alias r='rspec spec'
alias allspec='SPEC_OPTS="--format Fuubar" RAILS_ENV=test bundle exec rake spec:all'

#Jasmine
alias jspec='RAILS_ENV=test bundle exec rake spec:javascript'

# Deploy Shortcuts
alias quick-prod='NO_MAINTENANCE_MODE="true" DEPLOY_WITHOUT_SPECS="true" rake deploy:production'
alias quick-staging='NO_MAINTENANCE_MODE="true" DEPLOY_WITHOUT_SPECS="true" rake deploy:staging'

