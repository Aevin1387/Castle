# Bundler
alias be="bundle exec "

# Rails
alias rs="rails server"
alias rg="rails generate"
alias rc="rails console"
alias rdbr="rake db:migrate:reset db:test:prepare"
alias rreset="rdbr"
alias rdbm="rake db:migrate db:test:prepare"
alias migrate="bundle exec rake db:migrate"
alias prepare="bundle exec rake db:test:prepare"
alias reseed="bundle exec rake db:migrate:reset db:test:prepare; bundle exec rake db:seed"
alias trake="RAILS_ENV=test rake"
